<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".UserFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/parentToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:title="Tài khoản"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/user"
                    tools:src="@drawable/user"
                    tools:srcCompat="@drawable/user" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/linearlayout_infor"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Nguyễn Duy Phú"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_2"
                        android:fontFamily="@font/open_sans_extrabold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">



                        <TextView
                            android:id="@+id/canhan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cá nhân"
                            android:layout_marginRight="0dp"
                            android:textSize="@dimen/size_1"
                            android:paddingTop="5dp"
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/ic_baseline_person_24"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/light_gray" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearlayout_requireUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_LILO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đăng nhập/Đăng ký"
                        android:background="@drawable/border_red_backround_white"
                        android:fontFamily="@font/open_sans"
                        android:textSize="@dimen/size_3"
                        android:textColor="#DD484D"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QUẢN LÝ"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="@dimen/size_2" />


            <Button
                android:id="@+id/view_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="#FFFFFF"
                android:padding="20dp"
                android:textAlignment="viewStart"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_baseline_history_24"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black"
                android:textSize="@dimen/size_1"
                android:text="Lịch sử xem " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trung tâm hỗ trợ: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_2"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/call_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0938.51.68.99"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_2"
                    android:fontFamily="@font/open_sans_semibold"
                    android:background="@color/gray"
                    android:textAlignment="textEnd"
                    android:textColor="#40A6E3" />

            </LinearLayout>

        </LinearLayout>
</LinearLayout>



