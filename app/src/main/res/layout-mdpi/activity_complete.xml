<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:gravity="center"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    tools:context="com.smait.quyengop.CompleteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/open_sans_bold"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingBottom="15dp"
            android:text="Đã nhận được yêu cầu, vui lòng chờ xác thực.\nCảm ơn bạn!"
            android:textColor="@color/black"
            android:textSize="@dimen/size_2" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/open_sans_bold"
            android:visibility="gone"
            android:text="Cảm ơn bạn."
            android:textColor="@color/black"
            android:textSize="@dimen/size_2"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            tools:layout_editor_absoluteX="62dp" />

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|center"
            android:background="@drawable/border_radius_4_corners_button_red"
            android:fontFamily="@font/open_sans_semibold"
            android:padding="7dp"
            android:text="Xong"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/size_3"/>

    </LinearLayout>

</LinearLayout>