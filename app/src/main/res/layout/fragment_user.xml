<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical"   >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Light">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:title="Tài khoản"
                app:titleTextColor="@color/white" />

        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/user"
                    tools:src="@drawable/user"
                    tools:srcCompat="@drawable/user" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Nguyễn Duy Phú"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_2"
                        android:fontFamily="@font/open_sans_semibold" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        android:padding="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">



                        <TextView
                            android:id="@+id/canhan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cá nhân"
                            android:layout_marginRight="0dp"
                            android:textSize="@dimen/size_1"
                            android:paddingTop="5dp"
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/ic_baseline_person_24"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QUẢN LÝ"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="@dimen/size_2"
                />


                <Button
                    android:id="@+id/view_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="5dp"
                    android:background="#FFFFFF"
                    android:padding="20dp"
                    android:textAlignment="viewStart"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_baseline_history_24"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_1"
                    android:text="Lịch sử xem " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:background="#FFFFFF"
                android:gravity="bottom"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trung tâm hỗ trợ: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_2"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0938.51.68.99"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_2"
                    android:textAlignment="textEnd"
                    android:textColor="@color/purple_700" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>



