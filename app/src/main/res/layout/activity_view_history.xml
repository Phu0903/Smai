            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/size_1"
            android:textColor="@color/light_gray"
            android:text="20:05, 20/08/2021" />

        <TextView
            android:id="@+id/danh_muc2"
            android:layout_width="wrap_content"
