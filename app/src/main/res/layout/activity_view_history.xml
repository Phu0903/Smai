            android:layout_alignParentBottom="true"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/size_1"
            android:text="Học tập" />

        <TextView
            android:id="@+id/title_post_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_toRightOf="@+id/img2"
            android:text="Có ít sách vở cũ"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/size_3" />

        <ImageButton
            android:id="@+id/btn_more_2"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:background="@drawable/custom_more_button"
            android:src="@drawable/more" />

        <LinearLayout
            android:id="@+id/type_sach_lop_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_post_2"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/img2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:text="Sách lớp 1"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/size_1" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_sach_lop_2"
            android:layout_marginLeft="50px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@+id/img2"
            android:text="Phường Bình Hoà, thị xã Thuận an"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/size_1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_more_2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40px"
            android:layout_marginLeft="50px"
            android:text="Miễn phí"
            android:textColor="@color/green"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/size_1" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="420px"
        android:layout_marginTop="30px"
        android:background="@color/white"
        android:padding="30px">

