<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Detail">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_dt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:title="Danh mục"
        app:titleTextColor="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/dt_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiêu đề" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/dt_title1"
            android:layout_marginTop="10dp"
            android:background="@drawable/dt_custom_edit_text"
            android:hint="Lời nhắn ..." />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/dt_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú thêm (nếu có)" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/dt_title2"
            android:layout_marginTop="10dp"
            android:background="@drawable/dt_custom_edit_text"
            android:hint="Mô tả hoặc ghi chú ..." />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Hình ảnh" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_title">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dt_custom_edit_text"
                    android:padding="15dp">

                    <ImageButton
                        android:id="@+id/btn_uploadImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dt_btn_image_upload" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/dt_imaage_view1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:background="#F4D2A0" />

                <ImageView
                    android:id="@+id/dt_imaage_view2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:background="#F4D2A0" />

                <ImageView
                    android:id="@+id/dt_imaage_view3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:background="#F4D2A0" />

                <ImageView
                    android:id="@+id/dt_imaage_view4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:background="#F4D2A0" />

                <ImageView
                    android:id="@+id/dt_imaage_view5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:background="#F4D2A0" />

            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="bottom"
            android:background="@drawable/border_radius_4_corners_button_red"
            android:textSize="50px"
            android:text="Tiếp theo"
            android:textAllCaps="false" />

    </RelativeLayout>

</LinearLayout>