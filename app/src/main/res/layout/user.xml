<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tài Khoản"
        android:layout_marginLeft="-245dp"
        android:textAlignment="center"
        android:background="#ffd9a0"
        android:textColor="#333"
        android:textSize="30sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="135dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/user_icon"
        android:orientation="vertical">

    </LinearLayout>
    <EditText
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="155dp"
        android:ems="10"
        android:textSize="50px"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:text="BatMan" />

    <Button
        android:id="@+id/signinBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="450dp"
        android:background="@drawable/lightgreenbtns"
        android:backgroundTint="#A9d440"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Lịch sử đã xem"
        android:textColor="#333"
        android:textSize="45px">

    </Button>


    <Button
        android:id="@+id/signinBtn"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="87dp"
        android:background="@drawable/lightgreenbtns"
        android:backgroundTint="#A9d440"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Đăng xuất"
        android:textColor="#333"
        android:textSize="45px"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="670dp"
        >

        <TextView
            android:id="@+id/hotro"
            android:layout_width="170dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            android:text="Trung tâm hỗ trợ"
            android:textSize="45px">

        <Button
            android:id="@+id/sdt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:background="#fff"
            android:text="0938.51.68.99"
            android:textSize="45px"
            tools:layout_editor_absoluteX="195dp"
            tools:layout_editor_absoluteY="659dp" />

    </LinearLayout>


</RelativeLayout>