<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_hinh"
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_marginRight="20dp"
            android:src="@drawable/kesach"
            android:background="@drawable/border_radious_4_corners"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_hinh"

            android:columnCount="2"
            android:rowCount="3">

            <TextView
                android:id="@+id/tv_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có một số sách vở cũ vui lòng tự đến lấy nhé"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:textColor="@color/black"
                android:textSize="50px" />

            <TextView
                android:id="@+id/tv_catalog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="40px"
                android:text="Sách lớp 3"/>
            <TextView
                android:id="@+id/tv_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:textSize="40px"
                android:layout_gravity="right"
                android:textColor="#4CAF50"
                android:text="Miễn phí"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:textSize="40px"
                android:layout_column="0"
                android:text="6 phút"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:layout_gravity="right"
                android:layout_row="2"
                android:layout_column="1"
                android:text="Dĩ An, Bình Dương"/>

        </GridLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>